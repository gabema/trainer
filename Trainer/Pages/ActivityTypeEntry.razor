@page "/activity-type"
@page "/activity-type/{Id:int}"
@inject IActivityTypeService ActivityTypeService
@inject NavigationManager Navigation

<PageTitle>@(IsEditMode ? "Edit Activity Type" : "Add Activity Type")</PageTitle>

<div class="container mt-4">
    <h2>@(IsEditMode ? "Edit Activity Type" : "Add Activity Type")</h2>

    <EditForm Model="@activityType" OnValidSubmit="HandleSubmit">
        <DataAnnotationsValidator />
        
        <div class="mb-3">
            <label class="form-label">Name</label>
            <InputText @bind-Value="activityType.Name" class="form-control" />
            <ValidationMessage For="@(() => activityType.Name)" />
        </div>

        <div class="mb-3">
            <label class="form-label">Net Benefit</label>
            <div class="btn-group" role="group">
                <input type="radio" class="btn-check" name="netBenefit" id="netBenefitNone" 
                       checked="@(activityType.NetBenefit == NetBenefit.None)"
                       @onchange="() => SetNetBenefit(NetBenefit.None)" />
                <label class="btn btn-outline-secondary" for="netBenefitNone">None</label>

                <input type="radio" class="btn-check" name="netBenefit" id="netBenefitPositive" 
                       checked="@(activityType.NetBenefit == NetBenefit.Positive)"
                       @onchange="() => SetNetBenefit(NetBenefit.Positive)" />
                <label class="btn btn-outline-success" for="netBenefitPositive">Positive</label>

                <input type="radio" class="btn-check" name="netBenefit" id="netBenefitNegative" 
                       checked="@(activityType.NetBenefit == NetBenefit.Negative)"
                       @onchange="() => SetNetBenefit(NetBenefit.Negative)" />
                <label class="btn btn-outline-danger" for="netBenefitNegative">Negative</label>
            </div>
        </div>

        <div class="mb-3">
            <label class="form-label">Daily Amount</label>
            <InputNumber @bind-Value="activityType.DailyAmount" class="form-control" min="0" step="1" />
        </div>

        <div class="mb-3">
            <label class="form-label">Monthly Amount</label>
            <InputNumber @bind-Value="activityType.MonthlyAmount" class="form-control" min="0" step="1" />
        </div>

        <div class="mb-3">
            <button type="submit" class="btn btn-primary">@(IsEditMode ? "Update" : "Add")</button>
            <button type="button" class="btn btn-secondary ms-2" @onclick="Cancel">Cancel</button>
        </div>
    </EditForm>
</div>

@code {
    [Parameter]
    public int Id { get; set; }

    private ActivityType activityType = new();
    private bool IsEditMode => Id > 0;

    protected override async Task OnInitializedAsync()
    {
        if (IsEditMode)
        {
            var existingType = await ActivityTypeService.GetByIdAsync(Id);
            if (existingType != null)
            {
                activityType = existingType;
            }
        }
    }

    private void SetNetBenefit(NetBenefit benefit)
    {
        activityType.NetBenefit = benefit;
    }

    private string GetNavigationPath(string path)
    {
        var baseUri = Navigation.BaseUri.TrimEnd('/');
        var normalizedPath = path.TrimStart('/');
        return $"{baseUri}/{normalizedPath}";
    }

    private async Task HandleSubmit()
    {
        if (IsEditMode)
        {
            await ActivityTypeService.UpdateAsync(activityType);
        }
        else
        {
            await ActivityTypeService.AddAsync(activityType);
        }
        
        Navigation.NavigateTo(GetNavigationPath("/activity"));
    }

    private void Cancel()
    {
        Navigation.NavigateTo(GetNavigationPath("/activity"));
    }
}

