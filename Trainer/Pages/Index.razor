@page "/"
@inject IActivityService ActivityService
@inject IActivityTypeService ActivityTypeService
@inject IExportImportService ExportImportService
@inject IJSRuntime JSRuntime
@inject NavigationManager Navigation

<PageTitle>Trainer - Health Activity Tracker</PageTitle>

<div class="container mt-4">
    <h1 class="mb-4">Health Activity Tracker</h1>

    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5>Activities by Type</h5>
                </div>
                <div class="card-body">
                    <canvas id="activityChart" style="height: 300px;"></canvas>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-12">
            <button class="btn btn-primary me-2" @onclick="AddNewActivity">Add new Activity</button>
            <button class="btn btn-secondary me-2" @onclick="ExportActivities">Export Activities</button>
            <button class="btn btn-info" @onclick="ImportActivities">Import Activities</button>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5>Activities</h5>
                </div>
                <div class="card-body">
                    @if (activities.Any())
                    {
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Activity Type</th>
                                    <th>When</th>
                                    <th>Amount</th>
                                    <th>Notes</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var activity in activities.OrderByDescending(a => a.When))
                                {
                                    <tr style="cursor: pointer;" @onclick="() => EditActivity(activity.Id)">
                                        <td>@GetActivityTypeName(activity.ActivityTypeId)</td>
                                        <td>@activity.When.ToString("g")</td>
                                        <td>@activity.Amount</td>
                                        <td>@(activity.Notes.Length > 50 ? activity.Notes.Substring(0, 50) + "..." : activity.Notes)</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="text-muted">No activities yet. Click "Add new Activity" to get started.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<InputFile id="fileInput" accept=".json" style="display: none;" OnChange="HandleFileImport" class="d-none" />

@code {
    private List<Activity> activities = new();
    private List<ActivityType> activityTypes = new();
    private string? chartInstance;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        // #region agent log
        await JSRuntime.InvokeVoidAsync("debugLog", new { location = "Index.razor:82", message = "OnAfterRenderAsync entry", data = new { firstRender = firstRender }, runId = "run1", hypothesisId = "D" });
        // #endregion
        if (firstRender)
        {
            // #region agent log
            await JSRuntime.InvokeVoidAsync("debugLog", new { location = "Index.razor:85", message = "First render - before LoadData", data = new { }, runId = "run1", hypothesisId = "D" });
            // #endregion
            await LoadData();
            // #region agent log
            await JSRuntime.InvokeVoidAsync("debugLog", new { location = "Index.razor:87", message = "After LoadData - before UpdateChart", data = new { activitiesCount = activities?.Count ?? 0, activityTypesCount = activityTypes?.Count ?? 0 }, runId = "run1", hypothesisId = "D,B" });
            // #endregion
            await UpdateChart();
            // #region agent log
            await JSRuntime.InvokeVoidAsync("debugLog", new { location = "Index.razor:88", message = "After UpdateChart", data = new { chartInstanceCreated = chartInstance != null }, runId = "run1", hypothesisId = "B" });
            // #endregion
        }
    }

    private async Task LoadData()
    {
        // #region agent log
        await JSRuntime.InvokeVoidAsync("debugLog", new { location = "Index.razor:91", message = "LoadData entry", data = new { }, runId = "run1", hypothesisId = "D" });
        // #endregion
        try
        {
            // #region agent log
            await JSRuntime.InvokeVoidAsync("debugLog", new { location = "Index.razor:94", message = "Before ActivityService.GetAllAsync", data = new { }, runId = "run1", hypothesisId = "D" });
            // #endregion
            activities = await ActivityService.GetAllAsync();
            // #region agent log
            await JSRuntime.InvokeVoidAsync("debugLog", new { location = "Index.razor:95", message = "After ActivityService.GetAllAsync", data = new { activitiesCount = activities?.Count ?? 0 }, runId = "run1", hypothesisId = "D" });
            // #endregion
            // #region agent log
            await JSRuntime.InvokeVoidAsync("debugLog", new { location = "Index.razor:97", message = "Before ActivityTypeService.GetAllAsync", data = new { }, runId = "run1", hypothesisId = "D" });
            // #endregion
            activityTypes = await ActivityTypeService.GetAllAsync();
            // #region agent log
            await JSRuntime.InvokeVoidAsync("debugLog", new { location = "Index.razor:98", message = "After ActivityTypeService.GetAllAsync", data = new { activityTypesCount = activityTypes?.Count ?? 0 }, runId = "run1", hypothesisId = "D" });
            // #endregion
            StateHasChanged();
        }
        catch (Exception ex)
        {
            // #region agent log
            await JSRuntime.InvokeVoidAsync("debugLog", new { location = "Index.razor:102", message = "LoadData exception", data = new { exceptionType = ex.GetType().Name, exceptionMessage = ex.Message }, runId = "run1", hypothesisId = "D" });
            // #endregion
            throw;
        }
    }

    private async Task UpdateChart()
    {
        // #region agent log
        await JSRuntime.InvokeVoidAsync("debugLog", new { location = "Index.razor:98", message = "UpdateChart entry", data = new { activitiesCount = activities?.Count ?? 0, chartInstanceExists = chartInstance != null }, runId = "post-fix", hypothesisId = "B" });
        // #endregion
        try
        {
            var chartData = activities
                .GroupBy(a => a.ActivityTypeId)
                .Select(g => new
                {
                    TypeId = g.Key,
                    Count = g.Count()
                })
                .ToList();

            var labels = chartData.Select(d => GetActivityTypeName(d.TypeId)).ToArray();
            var data = chartData.Select(d => d.Count).ToArray();
            var colors = chartData.Select(d => GetActivityTypeColor(d.TypeId)).ToArray();
            
            // #region agent log
            await JSRuntime.InvokeVoidAsync("debugLog", new { location = "Index.razor:116", message = "Before chart destroy/create", data = new { labelsCount = labels?.Length ?? 0, dataCount = data?.Length ?? 0, hasExistingChart = chartInstance != null }, runId = "post-fix", hypothesisId = "B" });
            // #endregion
            if (chartInstance != null)
            {
                // #region agent log
                await JSRuntime.InvokeVoidAsync("debugLog", new { location = "Index.razor:118", message = "Before chartHelper.destroyChart", data = new { canvasId = chartInstance }, runId = "post-fix", hypothesisId = "B" });
                // #endregion
                await JSRuntime.InvokeVoidAsync("chartHelper.destroyChart", chartInstance);
                // #region agent log
                await JSRuntime.InvokeVoidAsync("debugLog", new { location = "Index.razor:119", message = "After chartHelper.destroyChart", data = new { }, runId = "post-fix", hypothesisId = "B" });
                // #endregion
            }

            // #region agent log
            await JSRuntime.InvokeVoidAsync("debugLog", new { location = "Index.razor:123", message = "Before chartHelper.createChart", data = new { canvasId = "activityChart", labelsCount = labels?.Length ?? 0 }, runId = "post-fix", hypothesisId = "B" });
            // #endregion
            chartInstance = await JSRuntime.InvokeAsync<string>("chartHelper.createChart", "activityChart", "bar", labels, data, colors);
            // #region agent log
            await JSRuntime.InvokeVoidAsync("debugLog", new { location = "Index.razor:124", message = "After chartHelper.createChart", data = new { chartInstanceCreated = chartInstance != null, chartInstanceValue = chartInstance }, runId = "post-fix", hypothesisId = "B" });
            // #endregion
        }
        catch (Exception ex)
        {
            // #region agent log
            await JSRuntime.InvokeVoidAsync("debugLog", new { location = "Index.razor:128", message = "UpdateChart exception", data = new { exceptionType = ex.GetType().Name, exceptionMessage = ex.Message }, runId = "run1", hypothesisId = "B" });
            // #endregion
            throw;
        }
    }

    private string GetActivityTypeName(int activityTypeId)
    {
        return activityTypes.FirstOrDefault(t => t.Id == activityTypeId)?.Name ?? "Unknown";
    }

    private string GetActivityTypeColor(int activityTypeId)
    {
        var type = activityTypes.FirstOrDefault(t => t.Id == activityTypeId);
        return type?.NetBenefit switch
        {
            NetBenefit.Positive => "rgba(40, 167, 69, 0.8)",
            NetBenefit.Negative => "rgba(220, 53, 69, 0.8)",
            _ => "rgba(108, 117, 125, 0.8)"
        };
    }

    private void AddNewActivity()
    {
        Navigation.NavigateTo("/activity");
    }

    private void EditActivity(int id)
    {
        Navigation.NavigateTo($"/activity/{id}");
    }

    private async Task ExportActivities()
    {
        try
        {
            var jsonData = await ExportImportService.ExportDataAsync();
            var fileName = $"trainer-export-{DateTime.Now:yyyyMMdd-HHmmss}.json";
            
            await JSRuntime.InvokeVoidAsync("downloadFile", fileName, jsonData);
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Export failed: {ex.Message}");
        }
    }

    private async Task ImportActivities()
    {
        // Trigger file input click via JavaScript
        await JSRuntime.InvokeVoidAsync("eval", "document.getElementById('fileInput').click();");
    }

    private async Task HandleFileImport(InputFileChangeEventArgs e)
    {
        try
        {
            using var stream = e.File.OpenReadStream(maxAllowedSize: 10 * 1024 * 1024);
            using var reader = new StreamReader(stream);
            var jsonData = await reader.ReadToEndAsync();

            await ExportImportService.ImportDataAsync(jsonData);
            await LoadData();
            await UpdateChart();
            
            await JSRuntime.InvokeVoidAsync("alert", "Import successful!");
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Import failed: {ex.Message}");
        }
    }
}

